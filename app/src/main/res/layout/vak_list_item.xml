<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="vakcode"
        android:id="@+id/vakcode"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ects"
        android:id="@+id/ects"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/grade"
        android:layout_alignEnd="@+id/grade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="grade"
        android:id="@+id/grade"
        android:layout_marginRight="68dp"
        android:layout_marginEnd="68dp"
        android:layout_below="@+id/ects"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ects: "
        android:id="@+id/textview3"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ects"
        android:layout_toStartOf="@+id/ects" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Periode: "
        android:id="@+id/textView3"
        android:layout_below="@+id/vakcode"
        android:layout_alignLeft="@+id/vakcode"
        android:layout_alignStart="@+id/vakcode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Periode"
        android:id="@+id/vakperiode"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />


</RelativeLayout>